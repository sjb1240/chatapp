<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="refresh" content="20">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="chatapp.css">
</head>

<body>

  <div id='formA_container'>
    <form action='/quotes' method='POST' id=formA>
      <input type='text' placeholder="name" name="name" required autocomplete="off"> </input>
      <br>
      <input type='text' placeholder="write your post" name="message" required> </input>
      <br>
      <button type='submit'><i class='fas fa-paper-plane' style='color:white; font-size: 20px'></i></button>
    </form>

  </div>

  <button type='delete' style="position: fixed; bottom: 20px; right: 20px;"><i class='fas fa-dumpster-fire' style='position: fixed; bottom: 20px; right: 20px; color:white; font-size: 120px' id='delete'></i></button>

  <div id='chat_container'>
    <div id='chat'>
      <% quotes.reverse() %>
      <% for(var i = 0; i<quotes.length; i++) {%>
      <h2>
        <%= quotes[i].name + ': ' + quotes[i].message %>
      </h2>
      <p>
        posted at
        <%= quotes[i].time %>
      </p>
      <hr>
      <% } %>
    </div>
  </div>
  <script>
    var del = document.getElementById('delete')

    del.addEventListener('click', function() {
      fetch('quotes', {
          method: 'delete',
          headers: {
            'Content-Type': 'application/json'
          }
        })
        .then(res => {
          window.location.reload()
        })
    })
  </script>
</body>

</html>
